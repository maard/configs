[user]
  name = Max Yem
  email = maard@cpan.org

[merge]
  tool = meld

[diff]
  tool = vimdiff
  guitool = meld

[difftool]
  prompt = no

[color]
  branch = auto
  diff = auto

[alias]
  amend = commit --amend
  au = add -u
  b = branch
  ci = commit
  co = checkout
  st = status
  cp = cherry-pick
  rs = remote -v show
  tree1 = log --graph --oneline --decorate
  tree = log --graph --abbrev-commit --decorate --date=local --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar / %ad)%C(reset) %C(white)%s%C(reset)  (%C(dim white)%an%C(reset))%C(bold yellow)%d%C(reset)'
  s = show
  sls = stash list
  ssh = stash show -p
  up = pull upstream
  d = diff
  dd = diff --cached
  w = whatchanged

[core]
  excludesfile = ~/.gitignore

[push]
  # depends on a apecific git version.
  # since i have different versions on different machines, either one must be used.
  default = matching
#  default = upstream

